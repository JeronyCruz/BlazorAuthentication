@page "/"
@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>Home</PageTitle>

<div class="row">
    <div class="card">
        <div class="card-body">
            <AuthorizeView>
                <NotAuthorized>
                    <span>You are not logged in. Please <a class="fw-bolder" href="/login">Click here</a> to login</span>
                </NotAuthorized>

                <Authorized>
                    <span>Logged in as <b>@context.User.Identity.Name</b>. <a class="fw-bolder" href="/logout"></a> to logout.</span>
                </Authorized>
            </AuthorizeView>
        </div>
    </div>
</div>
